<!-- card -->
    <main class="p-5 m-5">
        <h2>{{trail.name}}</h2>
        <div class='d-flex justify-content-center'>

            <div class='card-wrapper py-4 w-75 d-flex justify-content-center'>
                <div class="card w-75" >
                    <img class="card-img-top" src=
                    {{trail.largeImgURL}}
                    {{!-- "..." --}}
                     alt="Card image cap">
                    <div class="card-body d-flex flex-wrap">
                      <p class="card-text">
                          City: {{trail.city}}<br>
                          Zip Code: {{trail.zip}}<br>
                          Cross Streets: {{trail.crossstreets}}<br>
                          Address: {{trail.address}}<br>
                          Transit: {{trail.transit}}<br>
                          Latitude: {{trail.lat}} Longitude: {{trail.lng}} <br>
                          Description: 
                          {{splitTitle trail.desc}}
                          <br>
                          Lighting: {{trail.lighting}}<br>
                          Difficulty: {{trail.difficulty}}<br>
                          Surface: {{trail.surface}}<br>
                          Parking: {{trail.parking}}<br>
                          Facilities: {{trail.facilities}}<br>
                          Hours: {{trail.hours}}<br>


                          
                        </p>
                    </div>
                </div>
            </div>
                
        </div>

        <div class='comment-section p-3 m-3'>
            <div class="comment-title m-3 py-2 w-25 d-flex justify-content-center">
                <h4 class="comment-title-text">Comments:</h4>
            </div>
            <form class="comment-form">
                <div>
                  <textarea name="comment-body"></textarea>
                </div>
              
                <div>
                  <button type="submit">add comment</button>
                  <button type="button" class="upvote-btn">upvote</button>
                </div>
            </form>
            <div class='comment-box d-flex justify-content-center'>
                {{> comments trail.comments}}
            </div>

        </div>
    </main>

    {{#if loggedIn}}
    <script src="/javascripts/comment.js"></script>
    <script src="/javascripts/upvote.js"></script>
    {{/if}}
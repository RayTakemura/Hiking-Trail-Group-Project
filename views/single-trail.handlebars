<!-- card -->
    <main class="p-5 m-5">
        <h2>{{trail.name}}</h2>
        <div class='d-flex justify-content-center'>

            <div class='card-wrapper py-4 w-75 d-flex justify-content-center'>
                <div class="card w-75" >
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body d-flex flex-wrap">
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>
                
        </div>

        <div class='comment-section p-3 m-3'>
            <div class="comment-title m-3 py-2 w-25 d-flex justify-content-center">
                <h4 class="comment-title-text">Comments:</h4>
            </div>
            <form class="comment-form">
                <div>
                  <textarea name="comment-body"></textarea>
                </div>
              
                <div>
                  <button type="submit">add comment</button>
                  <button type="button" class="upvote-btn">upvote</button>
                </div>
            </form>
            <div class='comment-box d-flex justify-content-center'>
                {{> comments trail.comments}}
            </div>

        </div>
    </main>

    {{#if loggedIn}}
    <script src="/javascripts/comment.js"></script>
    {{!-- <script src="/javascripts/upvote.js"></script> --}}
    {{/if}}